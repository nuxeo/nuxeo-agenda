<?xml version="1.0"?>
<component name="org.nuxeo.ecm.agenda.theme">

  <require>org.nuxeo.theme.nuxeo.webapp</require>

  <extension target="org.nuxeo.ecm.platform.WebResources" point="bundles">
    <bundle name="nuxeo_includes">
      <resources append="true">
        <resource>agenda.css</resource>
        <resource>fullcalendar.css</resource>
        <resource>jquery-ui-1.8.19.custom.css</resource>
        <resource>moment.js</resource>
        <resource>fullcalendar.js</resource>
        <resource>fullcalendar.lang.js</resource>
        <resource>mustache.js</resource>
        <resource>events.widget.js</resource>
      </resources>
    </bundle>
  </extension>

  <extension target="org.nuxeo.ecm.platform.WebResources" point="resources">
    <resource name="agenda.css">
      <uri>/css/agenda.css</uri>
    </resource>
    <resource name="fullcalendar.css">
      <uri>/css/fullcalendar.css</uri>
    </resource>
    <resource name="jquery-ui-1.8.19.custom.css">
      <uri>/css/jquery-ui-fullcalendar/jquery-ui-1.8.19.custom.css</uri>
    </resource>
    <resource name="events.widget.js">
      <uri>/scripts/events.widget.js</uri>
    </resource>
    <resource name="fullcalendar.js">
      <uri>/scripts/fullcalendar.min.js</uri>
    </resource>
    <resource name="fullcalendar.lang.js">
      <uri>/scripts/fullcalendar.lang.js</uri>
    </resource>
  </extension>

</component>
